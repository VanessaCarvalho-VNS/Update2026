@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-lg-5">

    <div class="card card-modern shadow-sm">
        <div class="card-header card-header-modern bg-secondary d-flex justify-content-between align-items-center">
            <h5 class="mb-0">
                <i class="fas fa-building me-2"></i> Lista de Departamentos
            </h5>

            <a asp-action="Create" class="btn btn-primary btn-sm rounded">
                <i class="fas fa-plus"></i> Novo
            </a>
        </div>

        <div class="card-body">

            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary rounded">
                    <i class="fas fa-plus "></i> Novo Departamento
                </a>
            </div>

            <table class="table table-hover align-middle table-modern">
                <thead class="thead-purple">
                    <tr class="thead-purple">
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td class="text-end">

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-primary me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
