@model IEnumerable<SalesWebMvc.Models.Department>

@{
    ViewData["Title"] = "Departments";
}

<div class="container mt-lg-5">

    <div class="card shadow-sm">
        <div class="card-header bg-secondary ">
            <h2 class="mb-0 fs-5">Lista de Departamentos</h2>
        </div>

        <div class="card-body">

            <div class="mb-3">
                <a asp-action="Create" class="btn btn-primary rounded">
                    <i class="fas fa-plus "></i> Novo Departamento
                </a>
            </div>

            <table class="table table-striped table-hover align-middle">
                <thead class="thead-purple">
                    <tr class="thead-purple">
                        <th>
                            @Html.DisplayNameFor(model => model.Name)
                        </th>
                        <th class="text-end">Ações</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>

                            <td class="text-end">

                                <a asp-action="Edit"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-primary me-1">
                                    <i class="fas fa-edit"></i> Editar
                                </a>

                                <a asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-info me-1">
                                    <i class="fas fa-eye"></i> Detalhes
                                </a>

                                <a asp-action="Delete"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-danger">
                                    <i class="fas fa-trash"></i> Excluir
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>

        </div>
    </div>
</div>
