@{
    ViewData["Title"] = "Sales Records";
}

<h2 class="mb-4">@ViewData["Title"]</h2>

<div class="row">

    <!-- Simple Search -->
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Simple Search</h5>

                <form asp-action="SimpleSearch">
                    <div class="form-group mb-3">
                        <label>Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>

                    <div class="form-group mb-4">
                        <label>Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary px-4 rounded">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </div>

    <!-- Grouping Search -->
    <div class="col-md-6 mb-4">
        <div class="card shadow-sm">
            <div class="card-body">
                <h5 class="card-title mb-3">Grouping Search</h5>

                <form asp-action="GroupingSearch">
                    <div class="form-group mb-3">
                        <label>Min Date</label>
                        <input type="date" name="minDate" class="form-control" />
                    </div>

                    <div class="form-group mb-4">
                        <label>Max Date</label>
                        <input type="date" name="maxDate" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-primary px-4 rounded">
                        Search
                    </button>
                </form>
            </div>
        </div>
    </div>

</div>

