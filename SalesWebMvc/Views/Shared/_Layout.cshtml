<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesWebMvc</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-pulse.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalesWebMvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg bg-primary shadow-sm mb-4">
            <div class="container">

                <a class="navbar-brand fw-bold text-white"
                   asp-area=""
                   asp-controller="Home"
                   asp-action="Index">
                    SalesWeb
                </a>

                <button class="navbar-toggler"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar"
                        aria-expanded="false"
                        aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="mainNavbar">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="Home"
                               asp-action="Index">
                                Home
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="Departments"
                               asp-action="Index">
                                Departments
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="Sellers"
                               asp-action="Index">
                                Sellers
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="SalesRecords"
                               asp-action="Index">
                                Sales
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="Home"
                               asp-action="About">
                                About
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white fw-semibold"
                               asp-controller="Home"
                               asp-action="Contact">
                                Contact
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <footer class="navbar navbar-expand navbar-dark bg-primary mt-5">
        <div class="container justify-content-center align-items-center py-4 gap-2 d-flex flex-wrap">

            <span class="text-white">
                &copy; 2025 - <strong>SalesWebMvc</strong>
            </span>

            <span class="text-white">|</span>

            <a asp-controller="Home"
               asp-action="Privacy"
               class="text-white text-decoration-none">
                Política de Privacidade
            </a>

            <span class="text-white">|</span>

            <span class="text-white">
                Desenvolvido por Vanessa
            </span>

        </div>
    </footer>



    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
