@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">

    <!-- Hero Section -->
    <div class="row align-items-center mb-5">
        <div class="col-md-6">
            <h1 class="display-5 fw-bold mb-3">
                Sales Web System
            </h1>

            <p class="lead text-muted mb-4">
                A modern ASP.NET Core application to manage sales records,
                analyze results and group data efficiently.
            </p>

            <a asp-controller="SalesRecords"
               asp-action="Index"
               class="btn btn-primary btn-lg px-4 rounded">
                View Sales Records
            </a>
        </div>

        <div class="col-md-6 text-center">
            <img src="https://cdn-icons-png.flaticon.com/512/2920/2920277.png"
                 alt="Dashboard illustration"
                 class="img-fluid"
                 style="max-height: 300px;">
        </div>
    </div>

    <!-- Features -->
    <div class="row text-center">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">📊 Sales Analysis</h5>
                    <p class="card-text text-muted">
                        Track sales performance with detailed and grouped reports.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">📅 Date Filters</h5>
                    <p class="card-text text-muted">
                        Filter records easily by date range for accurate results.
                    </p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title mb-3">🏢 Group by Department</h5>
                    <p class="card-text text-muted">
                        View total sales grouped by department in a clean layout.
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

